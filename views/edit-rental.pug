extends common/layout

block content
  h1 Edit Rental
  form(action=`/listings/edit/${rental._id}`, method="POST")
    .form-group
      label(for="title") Title:
      input.form-control(type="text", name="title", id="title", value=rental.title)
    
    .form-group
      label(for="description") Description:
      textarea.form-control(name="description", id="description") #{rental.description}
    
    .form-group
      label(for="price") Price:
      input.form-control(type="number", name="price", id="price", value=rental.price)
    
    .form-group
      label(for="location") Location:
      input.form-control(type="text", name="location", id="location", value=rental.location)
    
    button.btn.btn-primary.mt-3(type="submit") Edit Rental
