extends common/layout

block content
  div.content 
    h1.page-title Add Menu Link 
    form(method="post", action="/admin/menu/add/submit")
      div
        label(for='link-weight') Weight: 
        input(type='number', min="0", max="10",id="link-weight",name="weight")
      div 
        label(for="link-path") Link path: 
        input(type="text", id="link-path", name="path", placeholder="e.g. /contact") 
      div 
        label(for="link-name") Link Name: 
        input(type="text", id="link-name", name="name", placeholder="e.g. Contact") 
      button(type="submit") Add Link
    
